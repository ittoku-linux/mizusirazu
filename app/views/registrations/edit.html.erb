<body class="body--registration"></body>

<div class="form">
  <!-- form -->
  <div class="nes-container is-rounded">
    <h1 class="title"><%= t('edit_user') %></h1>
    <%= form_with(scope: resource_name, url: user_registration_path, method: :put) do |f| %>
      <%= render 'shared/error_messages', object: resource %>

      <%= render 'form', f: f %>
    <% end %>

    <div class="form-field">
      <h2><%= t('delete_user') %></h2>
      <br />
      <%= link_to t('delete'),
        user_registration_path,
        class: 'nes-btn is-error',
        method: :delete,
        data: { confirm: "Are you sure?" }
      %>
    </div>
  </div>
</div>
