<body class="body--registration"></body>

<div class="user__form">
  <!-- form -->
  <div class="nes-container is-rounded">
    <h1 class="title"><%= t('edit_user') %></h1>
    <%= form_with(scope: resource_name, url: user_registration_path, method: :put) do |f| %>
      <%= render 'shared/error_messages', resource: resource %>

      <%= render 'form', f: f %>
   <% end %>

    <div class="user__form-field">
      <h2><%= t('delete_user') %></h2>
      <br />
      <%= link_to t('delete'), user_registration_path, class: 'nes-btn is-error', data: { confirm: "Are you sure?" }, method: :delete %>

    </div>
  </div>

  <!-- links -->
  <div class="user__form-links">
    <ul class="nes-list is-circle">
      <li><%= link_to t('back'), :back %></li>
    </ul>
  </div>
</div>
