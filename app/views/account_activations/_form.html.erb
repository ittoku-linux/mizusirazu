<%= form_with url: account_activations_path, scope: :account_activation, method: :post do |f| %>
    <%= f.label :email, class: 'block mt-4' do %>
      <%= content_tag(:span, 'Email', class: 'block ml-2 text-gray-600') %>
      <%= f.email_field :email, placeholder: 'Email', class: 'w-full md:w-auto block text-sm rounded border-violet-400 focus:ring-0 shadow' %>
    <% end %>
    <%= recaptcha_v3 action: 'account_activation', turbolinks: true %>
    <%= f.submit 'Activate', class: 'ml-2 mt-4 p-2 bg-orange-300 hover:bg-orange-500 hover:text-white border border-emerald-500 rounded' %>
<% end %>