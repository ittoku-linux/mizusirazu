<%= form_with model: [@user, @user.profile], method: :patch do |f| %>
  <div class="space-y-4">
    <%= render 'shared/form_errors', object: f.object %>
    <%= settings_form_field(f, :name, 'Enter your name. This name will be public. You can delete it at any time.') %>
    <%= settings_form_field(f, :bio, 'Enter your self-introduction. This introduction will be public. You can delete it at any time.', class: 'h-32') %>
    <%= settings_form_field(f, :location, 'Enter your country. This country will be public. You can delete it at any time.') %>
    <%= f.submit yield(:submit_text), class: 'p-2 border rounded border-black shadow bg-green-500 hover:bg-green-400 text-white' %>
  </div>
<% end %>
