<body class="body--password-new"></body>

<div class="user__form">
  <div class="nes-container is-rounded">
    <h1 class="title">Reset password</h1>
    <%= form_with(url: password_resets_path, local: true, method: :post) do |f| %>
      <div class="user__form-field nes-field">
        <%= f.text_field :email, class: 'user__form-input nes-input', placeholder: 'Email' %>
      </div>

      <div class="user__form-field">
        <%= f.submit class: 'nes-btn is-primary' %>
      </div>
    <% end %> 
  </div>
</div>

