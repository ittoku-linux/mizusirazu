<body class="body--password-new"></body>

<div class="user__form">
  <div class="nes-container is-rounded">
    <h1 class="title"><%= t('change_password') %></h1>
    <%= form_with(url: password_resets_path, local: true, method: :post) do |f| %>
      <div class="user__form-field nes-field">
        <%= f.text_field :email, class: 'user__form-input nes-input', placeholder: t('user.email') %>
      </div>

      <div class="user__form-field">
        <%= f.submit t('reset_password'), class: 'nes-btn is-primary' %>
      </div>
    <% end %> 
  </div>

  <!-- links -->
  <div class="user__form-links">
    <ul class="nes-list is-circle">
      <li><%= link_to t('signup'), new_user_path %></li>
      <li><%= link_to t('login'), new_password_reset_path %></li>
    </ul>
  </div>
</div>

