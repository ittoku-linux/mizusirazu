<tr class="divide-x divide-fuchsia-500">
  <td class="p-2">
    <div class="flex flex-row items-center min-w-max">
      <div class="basis-1/4">
        <%= user_index_field(user, :avatar) %>
      </div>
      <div class="basis-3/4 ml-4">
        <%= user_index_field(user, :name) %>
        <%= user_index_field(user, :email, class: 'text-gray-500') %>
      </div>
    </div>
  </td>
  <td class="p-2">
    <%= user_index_field(user.profile, :name, class: 'max-w-lg text-indigo-500') %>
    <%= user_index_field(user.profile, :bio, class: 'max-w-lg text-lime-500') %>
    <%= user_index_field(user.profile, :location, class: 'max-w-lg text-teal-500') %>
  </td>
  <td class="p-2">
    <%= user_index_field(user, :activated) %>
  </td>
  <td class="p-2 text-rose-500">
    <%= user_index_control_tag(user, class: 'block') %>
  </td>
</tr>
