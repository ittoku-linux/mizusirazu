<body class="body--user-edit"></body>

<div class="user__form">
  <!-- form -->
  <div class="nes-container is-rounded">
    <h1 class="title">Editing User</h1>
    <%= render 'form', user: current_user %>
  </div>

  <!-- links -->
  <div class="user__form-links">
    <ul class="nes-list is-circle">
      <li><%= link_to 'Profile', @user %></li>
      <li><%= link_to 'Back', root_path %></li>
      <li><%= button_to "Destroy", current_user, data: { confirm: "Are you sure?" }, method: :delete %></li>

    </ul>
  </div>
</div>


