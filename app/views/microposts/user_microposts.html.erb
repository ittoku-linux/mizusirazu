<body class="body--micropost"></body>

<div class="p-4 text-sm">
  <% if @microposts.any? %>
    <h1 class="text-center text-xl"><%= t('micropost_list') %></h1>

    <div class="grid grid-cols-1 lg:grid-cols-2">
      <%= render @microposts %>
    </div>

    <%= will_paginate @microposts %>
  <% else %>
    <div class="">
      <div class="nes-container">
        <h1>Micropost nothing</h1>
        <% if current_user&.id == params[:id].to_i %>
          <p>please write micropost</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

